<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.Login">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        >

        <ImageView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/logo"
            android:layout_marginLeft="@dimen/marginLeftLogo"
            android:layout_marginTop="@dimen/marginTopLogo">

        </ImageView>

        <TextView
            android:id="@+id/welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/logo"
            android:text="Welcome back"
            android:textStyle="bold"
            android:textSize="30sp"
            android:layout_marginTop="121dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            ></TextView>
        <TextView
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone number"
            android:textSize="16sp"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="27dp"
            android:layout_below="@+id/welcome"
            android:textStyle="bold"
            android:layout_centerVertical="true"></TextView>
        <RelativeLayout
            android:id="@+id/khung2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/phone"
            android:layout_marginRight="28dp"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/curve_button">
            <EditText
                android:id="@+id/edit_text_username"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="28dp"
                android:layout_marginRight="28dp"
                android:hint="Enter your phone number"
                android:background="@android:color/transparent"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/pass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/khung2"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="28dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="Password"></TextView>
        <RelativeLayout
            android:id="@+id/khung"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pass"
            android:layout_marginRight="28dp"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/curve_button">
            <EditText
                android:id="@+id/edit_text_password"
                android:layout_width="match_parent"
                android:layout_height="54dp"
                android:layout_centerHorizontal="true"
                android:inputType="textPassword"
                android:layout_marginLeft="28dp"
                android:layout_marginRight="28dp"
                android:background="@android:color/transparent"
                android:hint="Enter your password">
            </EditText>

            <ImageView
                android:id="@+id/image_view_eye"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:contentDescription="eye"
                android:src="@drawable/eye"></ImageView>
        </RelativeLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_signin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/khung"
            android:layout_marginTop="140dp"
            android:layout_marginLeft="35dp"
            android:layout_marginRight="35dp"
            android:text="Login"
            android:textSize="20sp"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:background="@drawable/button_signin"
            >

        </androidx.appcompat.widget.AppCompatButton>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/btn_signin">
            <TextView
                android:id="@+id/chu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Don't have an account ?"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:textStyle="italic"></TextView>


            <TextView
                android:id="@+id/click"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text=" Click here"
                android:textStyle="italic"
                android:textColor="#FDB222"
                android:layout_toRightOf="@+id/chu">

            </TextView>
        </RelativeLayout>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>