<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/frame_product_home_page_1"
    android:layout_margin="3dp"
    app:cardCornerRadius="12dp"
    app:cardPreventCornerOverlap="false"
    app:strokeColor="@color/lightgray"
    app:strokeWidth="1dp">

    <RelativeLayout
        android:id="@+id/product_1_home_page"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <RelativeLayout
            android:id="@+id/frame_product1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <androidx.cardview.widget.CardView
                android:id="@+id/image_product1_home_page"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="10dp"
                android:scaleType="centerCrop"
                android:foreground="@drawable/hinhtron_homepage_food"
                app:cardBackgroundColor="@color/green"
                app:cardCornerRadius="45dp">

                <ImageView
                    android:id="@+id/imgSource"
                    android:layout_width="120dp"
                    android:layout_height="140dp"
                    android:layout_gravity="center"
                    android:src="@drawable/fried_chicken">

                </ImageView>
            </androidx.cardview.widget.CardView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/image_product1_home_page"
                >

                <TextView
                    android:id="@+id/name_product1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Fried chicken thighs"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    >
                </TextView>
                <TextView
                    android:id="@+id/des_product1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/name_product1"
                    android:text="Plump chicken thighs are soaked in egg and rolled in breadcrumbs"
                    android:textStyle="italic"
                    android:textColor="@color/gray"
                    >
                </TextView>
                <TextView
                    android:id="@+id/price_product_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/des_product1"
                    style="@style/text_bold_yellow"
                    android:layout_marginTop="5dp"
                    android:textSize="20sp"
                    android:text="135.000 VND"
                    >
                </TextView>

            </RelativeLayout>

        </RelativeLayout>

        <ImageButton
            android:id="@+id/add_button_product_1"
            android:layout_width="55dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@+id/frame_product1"
            android:background="@drawable/add_button"
            android:padding="9dp"
            android:scaleType="fitCenter"
            android:src="@drawable/add_icon">
        </ImageButton>

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>