<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ta1"
    android:layout_width="match_parent"
    android:background="@drawable/monan"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="10dp"
    tools:context=".fragments.ShoppingFragment">

    <RelativeLayout
        android:id="@+id/card_food"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/monan">

        <ImageView
            android:id="@+id/anh_food"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:scaleType="centerCrop"
            android:src="@drawable/fried_chicken"></ImageView>

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/anh_food"
            android:layout_marginLeft="5dp"
            android:text="Fried Chicken"
            android:textSize="20dp"
            android:textStyle="bold">

        </TextView>

        <TextView
            android:id="@+id/dacta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name"
            android:layout_marginLeft="5dp"
            android:text="It is a established..."
            android:textColor="#939393"
            android:textSize="15sp"
            android:textStyle="bold"></TextView>

        <TextView
            android:id="@+id/gia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="10dp"
            android:text="135.000 VND"
            android:textColor="#FDB222"
            android:textSize="20dp"
            android:textStyle="bold"

            >

        </TextView>

        <LinearLayout
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginBottom="0dp"
            android:background="@drawable/them"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+"
                android:textColor="@color/white"
                android:textSize="25dp">

            </TextView>
        </LinearLayout>
    </RelativeLayout>


</androidx.cardview.widget.CardView>