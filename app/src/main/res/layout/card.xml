<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ta1"
    android:layout_width="match_parent"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="10dp"
    android:background="@drawable/monan"

    android:layout_height="wrap_content">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/monan"
    android:orientation="vertical"

    >

    <ImageView
        android:id="@+id/anhfood"
        android:layout_width="match_parent"
        android:layout_height="161dp"
        android:scaleType="centerCrop"
        android:src="@drawable/product_1_1"></ImageView>

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/anh1"
        android:layout_marginLeft="5dp"
        android:text="Lorem ipsum"
        android:textSize="20dp"
        android:textStyle="bold">

    </TextView>

    <TextView
        android:id="@+id/docta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dong1"
        android:layout_marginLeft="5dp"
        android:text="It is a established..."
        android:textColor="#939393"
        android:textSize="15sp"
        android:textStyle="bold"></TextView>

    <TextView
        android:id="@+id/gia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dong2"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:text="100,000 VND"
        android:textColor="#FDB222"
        android:textSize="20dp"
        android:textStyle="bold"

        >

    </TextView>

    <LinearLayout
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginBottom="0dp"
        android:background="@drawable/them"

        android:layout_gravity="right"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:textColor="@color/white"
            android:textSize="25dp">

        </TextView>
    </LinearLayout>
</LinearLayout>


</androidx.cardview.widget.CardView>