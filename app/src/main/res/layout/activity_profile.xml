<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ProfileActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/bths"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:id="@+id/back"
                android:gravity="center"
                android:layout_height="70dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Profile"
                    android:textSize="30dp"
                    android:textStyle="bold"></TextView>


            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:id="@+id/phimback"

                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:layout_height="60dp">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/button_back"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/caretleft"
                    android:layout_width="40dp"
                    android:layout_height="40dp">
                </androidx.appcompat.widget.AppCompatButton>


            </RelativeLayout>
            <RelativeLayout
                android:layout_below="@+id/phimback"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:id="@+id/aa"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_marginBottom="10dp"
                        android:layout_height="wrap_content">
                        <androidx.cardview.widget.CardView
                            android:id="@+id/frame_image_profile"
                            android:layout_width="130dp"
                            android:layout_height="130dp"
                            android:foreground="@drawable/hinhtron_homepage_avatar"
                            app:cardBackgroundColor="@color/green"
                            app:cardCornerRadius="65dp">

                            <ImageView
                                android:id="@+id/image_profile"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/anh_quyen">

                            </ImageView>
                        </androidx.cardview.widget.CardView>
                    </RelativeLayout>
                    <RelativeLayout
                        android:gravity="center"
                        android:layout_below="@+id/aa"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tên đăng nhập"
                            android:textSize="18sp"
                            >
                        </TextView>
                    </RelativeLayout>
                </RelativeLayout>

            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_above="@+id/btnupdate"
            android:layout_below="@+id/bths"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ListView
                android:divider="@null"
                android:dividerHeight="0dp"
                android:id="@+id/hoso"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </ListView>



        </RelativeLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnupdate"
            android:layout_alignParentBottom="true"
            android:background="@drawable/update_button"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:text="Update"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="22dp">

        </androidx.appcompat.widget.AppCompatButton>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>