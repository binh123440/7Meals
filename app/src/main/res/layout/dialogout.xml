<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <RelativeLayout
            android:background="@drawable/diag"
            android:layout_width="match_parent"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:layout_height="wrap_content"
            android:padding="22dp"
            >
            <RelativeLayout
                android:layout_marginBottom="35dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/text"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:text="Hãy chắc chắc rằng bạn đã đọc kĩ và đồng ý với các điều khoản về xoá tài khoản.Bạn chắc chắn sẽ xoá tài khoản này ?  "
                    android:layout_height="wrap_content">
                </TextView>
                <RelativeLayout
                    android:layout_below="@+id/text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.appcompat.widget.AppCompatButton
                        android:background="@drawable/khong"
                        android:id="@+id/ko"
                        android:layout_marginTop="18dp"
                        android:padding="10dp"
                        android:textAllCaps="false"
                        android:gravity="center"
                        android:text="Không, tôi muốn giữ lại"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    </androidx.appcompat.widget.AppCompatButton>
                    <androidx.appcompat.widget.AppCompatButton
                        android:textAllCaps="false"
                        android:id="@+id/co"
                        android:background="@drawable/co"
                        android:layout_below="@+id/ko"
                        android:padding="10dp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:text="Có, tôi chắc chắn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    </androidx.appcompat.widget.AppCompatButton>
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>