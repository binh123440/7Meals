<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.RulesActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <RelativeLayout
            android:id="@+id/bths"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:id="@+id/phimback"

                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:layout_height="60dp">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/backve"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/caretleft"
                    android:layout_width="40dp"
                    android:layout_height="40dp">
                </androidx.appcompat.widget.AppCompatButton>
            </RelativeLayout>
            <LinearLayout
                android:orientation="vertical"
                android:padding="8dp"
                android:layout_below="@+id/phimback"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="match_parent"
                    android:text="TERMS OF SERVICE"
                    android:textSize="25sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:padding="20dp"
                    android:layout_height="wrap_content">

                </TextView>
                <Spinner
                    android:padding="8dp"
                    android:id="@+id/spiner1"
                    android:layout_marginBottom="25dp"
                    android:layout_width="match_parent"
                    android:entries="@array/list"
                    android:layout_height="wrap_content">

                </Spinner>
                <Spinner
                    android:padding="8dp"
                    android:id="@+id/spiner2"
                    android:layout_marginBottom="25dp"
                    android:layout_width="match_parent"
                    android:entries="@array/list2"
                    android:layout_height="wrap_content">

                </Spinner>
                <Spinner
                    android:padding="8dp"
                    android:id="@+id/spiner3"
                    android:layout_marginBottom="25dp"
                    android:layout_width="match_parent"
                    android:entries="@array/list3"
                    android:layout_height="wrap_content">

                </Spinner>
                <Spinner
                    android:padding="8dp"
                    android:id="@+id/spiner4"
                    android:layout_marginBottom="25dp"
                    android:layout_width="match_parent"
                    android:entries="@array/list4"
                    android:layout_height="wrap_content">
                </Spinner>
            </LinearLayout>
        </RelativeLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>